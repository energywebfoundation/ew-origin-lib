{
    "compilerOptions": {
        "outDir": "./dist/js",
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "./src/**/*",
        "./dist/ts/**/*"
    ]
}